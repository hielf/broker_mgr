<%= render :partial => 'grid' %>

<div class="row-fluid">
	<div class="span12 well">
			<div class="row-fluid">
				<div class="span6">
					<div class="row-fluid">
						<div class="span4">
							客户姓名：
						</div>
						<div class="span8">
							<%= grid_filter @custs_grid, :name_filter  %>
						</div>
					</div>
				</div>
				<div class="span6">
					<div class="row-fluid">
						<div class="span4">
							资金账号：
						</div>
						<div class="span8">
							<%= grid_filter @custs_grid, :capital_account_filter  %>
						</div>
					</div>
				</div>
			</div>
			
			<div class="row-fluid">
				<div class="span6">
					<div class="row-fluid">
						<div class="span4">
							营业部：
						</div>
						<div class="span8">
							<%= grid_filter @custs_grid, :branch_filter  %>
						</div>
					</div>
				</div>
				<div class="span6">
					<div class="row-fluid">
						<div class="span4">
							开户日期：
						</div>
						<div class="span8">
							<%= grid_filter @custs_grid, :open_date_filter  %>
						</div>
					</div>
				</div>
			</div>
			
			<div class="row-fluid">
				<div class="span12">
					<div class="form-actions">
						<button class="btn btn-primary wg-external-submit-button" data-grid-name="custs">查询</button>
						<button class="btn wg-external-reset-button" data-grid-name="custs">重置</button>
						<button class="btn btn-success wg-external-csv-export-button pull-right" data-grid-name="custs">导出</button>
					</div>	
				</div>
			</div>
		</div>
	</div>
<%= render_grid(@custs_grid) %>